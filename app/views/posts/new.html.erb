<%= javascript_include_tag Ckeditor.cdn_url %>
<% provide(:subtitle_lv1, t("layouts.pagetop.create_post")) %>
<section class="games-single-page">
  <div class="container">
    <%= render "layouts/pagetop" %>
    <div class="row">
      <div class="col-xl-9 col-lg-8 col-md-7 game-single-content">
        <%= bootstrap_form_for(@post) do |f| %>
          <%= f.text_field :subject, label: t(".title"), label_class: "text-white"
           %>
          <div class="form-group">
            <label class="text-white"><%= t ".root topic" %></label>
            <%= select_tag :parent, options_for_select(@root_topics),
            {include_blank: true, class: "form-control", id: "root_topic"} %>
          </div>
          <div class="form-group">
            <label class="text-white"><%= t ".sub_topic" %></label>
            <div id="subtopics">
              <%= select_tag :topic_id, {},class: "form-control", id: "root_topic" %>
            </div>
          </div>
          <%= f.cktext_area :content, ckeditor: { language: I18n.locale} %>
          <%= f.submit t(".create") %>
        <% end %>
      </div>
      <div class="col-xl-3 col-lg-4 col-md-5 sidebar game-page-sideber">
        <div id="stickySidebar">
          <div class="widget-item">
            <div class="rating-widget">
              <h4 class="widget-title"><%= t ".suggest" %></h4>
              <!-- This area for suggest item -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
