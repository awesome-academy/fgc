<section class="blog-section spad">
  <div class="container margin-top">
    <div class="row align-items-center justify-content-center text-center">
      <h1 class="title text-white"><%= t ".login" %></h1>
    </div>
    <%= render "layouts/error" %>
    <div class="row align-items-center justify-content-center">
      <div class="col-lg-offset-3 col-lg-6">
        <%= form_for :session, url: login_path do |f| %>
          <div class="form-group">
            <%= f.label t(".email"), class: "text-white" %>
            <%= f.email_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label t(".password"), class: "text-white" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <span class="text-white small"> <%= t(".remember_me") %></span>
          </div>
          <div class="text-center">
            <%= f.submit t(".login"), class: "btn btn-info col-lg-12" %>
          </div>
          <div>
            <%= link_to t(".fogot"), "#", class: "text-left"%>
            <%= link_to t(".register"), new_user_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
