<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label t("users.new.name"), class: "control-label text-white" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("users.new.email"), class: "control-label text-white" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("users.new.password"), class: "control-label text-white" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("users.new.password_confirm"), class: "control-label text-white" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit t("users.new.register"), class: "btn btn-success" %>
  </div>
<% end %>
