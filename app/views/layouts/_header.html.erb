<header class="header-section">
  <div class="header-warp">
    <div class="header-social d-flex justify-content-end">
      <p><%= t ".language" %></p>
      <%= link_to t(".english"), locale:"en" %>
      <%= link_to t(".vietnamese"), locale:"vi" %>
    </div>
    <div class="header-bar-warp d-flex">
      <%= link_to root_path, class: "site-logo" do %>
        <%= image_tag("logo.png", alt: t(".Gamecommunity")) %>
      <% end %>
      <nav class="top-nav-area w-100">
        <div class="user-panel">
          <% if log_in? %>

          <% else %>
            <%= link_to t(".login"), login_path %>
            / <%= link_to t(".register"), new_user_path %>
          <% end %>
        </div>
        <ul class="main-menu primary-menu">
          <li><%= link_to t(".home"), "#" %></li>
          <li><%= link_to t(".games"), "#" %>
            <ul class="sub-menu">
              <li><%= link_to t(".gamesingle"), "#" %></li>
            </ul>
          </li>
          <li><%= link_to t(".reviews"), "#" %></li>
          <li><%= link_to t(".news"), "#" %></li>
          <li><%= link_to t(".contact"), "#" %></li>
        </ul>
      </nav>
    </div>
  </div>
</header>

